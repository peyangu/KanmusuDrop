<Window x:Name="TwitterWindow1" x:Class="KanmusuDrop.TwitterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanmusuDrop"
        mc:Ignorable="d"
        Title="艦娘ドロップ記録 - かんろく -" Height="160.623" Width="444.476">
    <Grid>
        <Label Name="label1" Content="ドロップ情報をTwitterに投稿することができます。" Margin="0,0,0,103"/>
        <Label Name="label2" Content="認証ボタンを押すと、Twitter連携ページを表示します。" Margin="0,20,0,83"/>
        <Label Name="label3" Content="連携後に表示されるPINコードを下のテキストボックスに入力し、完了ボタンを押してください。" Margin="0,40,0,61"/>
        <Button Name="AuthButton" Content="認証" Click="AuthButton_Click" Margin="10,69,356,40"/>
        <TextBox x:Name="PinCodeText" HorizontalAlignment="Left" Height="23" Margin="10,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308"/>
        <Button x:Name="EndButton" Content="完了" HorizontalAlignment="Left" Margin="323,95,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="EndButton_Click"/>
    </Grid>
</Window>
